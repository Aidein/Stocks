<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Stocks" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/black</item>
        <item name="colorAccent">@color/black</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textSize">28sp</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="TextMontserratBold" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/cc_montserrat_bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextMontserratNormal" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/montserrat_semi_bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextMontserratRegular" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textColor">@color/black</item>
    </style>
</resources>